<h1>Wines</h1>
<p>Wines Currently in stock as of <%= formatted_time(@available_at) %></p>
<%= page_entries_info @wines %>
<ol>
<% @wines.each do |wine| %>
  <li>
  	<%= link_to(wine.name, wine) %>
  	<br>
  	<%= wine.year %> <%= wine.varietal %> bottled by <%= wine.winery %>, <%= wine.country %>
  	<br>
  	<%= format_average_rating(wine) %>
  	<% if wine.log_entries.any? %>
  	(out of <%= pluralize(wine.log_entries.size, 'Log Entry') %>)
  	<% end %>
  	<br><br>
  </li>
<% end %>
</ol>
<%= paginate @wines %>