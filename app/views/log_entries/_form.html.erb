<%= form_for( [ @wine, @log_entry ] ) do |f| %>
  <%= render 'shared/validation_errors', object: @log_entry %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, placeholder: 'Name' %><br />
  <%= f.label :rating %>  
  <% LogEntry::RATING.each do |ratings| %>
    <%= f.radio_button :rating, ratings %> <%= ratings %>
  <% end %><br />
    <%= f.label :location %>
  <%= f.text_field :location, placeholder: 'Location' %><br />
  <%= f.label :comments %><br/>
  <%= f.text_area :comments %><br/>
  <%= f.label :tasted_on %>
  <%= f.datetime_select :tasted_on,
      use_short_month: true,
      order: [:month, :day, :year],
      discard_hour: true,
      discard_minute: true,
      prompt: { month: 'Select month', day: 'Select day', year: 'Select year' } %>
  <br>
  <p>
    <br>
    <%= f.submit %>&nbsp;
       <%= link_to 'Cancel', wine_log_entries_path(@wine), id: 'cancel_log_entry' %>
  </p>
<% end %>