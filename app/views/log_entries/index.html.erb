<header>Log Entries for <%= link_to(@wine.name, @wine) %></header>
<ol id="log_entries">
  <% @log_entries.each do |log_entry| %>
    <li>
        &quot;<%= log_entry.comments %>&quot;
        <br>
        <span class="user">Written by <%= log_entry.name %></span>
      <span class="date">
        <%= time_ago_in_words(log_entry.created_at) %> ago.
      </span>
      <br>
      <span class="location">Tasted in <%= log_entry.location %> <%= time_ago_in_words(log_entry.tasted_on) %> ago.</span>

      <br>
      <span class="ratings">Rating: <%= log_entry.rating %> grapes out of 5.</span>
      <br><br>
    </li>
  <% end %>
</ol>


<%= link_to 'Enter a Log Entry', new_wine_log_entry_path(@wine),
        remote: true,
        data: { 'update-target' => 'log_entry_form_container' },
        class: 'btn btn-primary' %>
<br><br>
<div id="log_entry_form_container"></div>